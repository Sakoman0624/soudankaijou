<% if obj.present? && obj.errors.any? %>
  <div class="alert alert-danger alert-dismissible fade show text-center" role="alert">
    <strong><%= obj.errors.count %>件のエラーが発生しました</strong>
    <ul>
      <% obj.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>