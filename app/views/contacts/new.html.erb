<div class="container mt-5">
  <h2 class="text-center mb-4">お問い合わせ</h2>

  <%= form_with model: @contact, url: confirm_contacts_path, local: true do |f| %>
    <div class="form-group">
      <%= f.label :name, "お名前" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :message, "お問い合わせ内容" %>
      <%= f.text_area :message, rows: 5, class: "form-control" %>
    </div>

    <div class="text-center">
      <%= f.submit "確認画面へ", class: "btn btn-primary btn-lg" %>
    </div>
  <% end %>
</div>
