<div class="container mt-5 mb-5">
  <div class="card shadow-lg p-4 rounded-lg mx-auto" style="max-width: 600px; background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%); color: white;">
    <h2 class="text-center mb-4 font-weight-bold">お問い合わせ</h2>

    <%= form_with model: @contact, url: confirm_contacts_path, local: true do |f| %>
      <div class="form-group position-relative mb-4">
        <%= f.label :name, "お名前", class: "font-weight-bold" %>
        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text bg-white border-0">
              <i class="fas fa-user"></i>
            </span>
          </div>
          <%= f.text_field :name, class: "form-control border-0 shadow-sm", placeholder: "例: 山田 太郎" %>
        </div>
      </div>

      <div class="form-group position-relative mb-4">
        <%= f.label :email, "メールアドレス", class: "font-weight-bold" %>
        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text bg-white border-0">
              <i class="fas fa-envelope"></i>
            </span>
          </div>
          <%= f.email_field :email, class: "form-control border-0 shadow-sm", placeholder: "example@example.com" %>
        </div>
      </div>

      <div class="form-group mb-5">
        <%= f.label :message, "お問い合わせ内容", class: "font-weight-bold" %>
        <%= f.text_area :message, rows: 5, class: "form-control shadow-sm", placeholder: "ご質問・ご要望をお書きください" %>
      </div>

      <div class="text-center">
        <%= f.submit "確認画面へ", class: "btn btn-gradient btn-lg px-5 font-weight-bold text-white" %>
      </div>
    <% end %>
  </div>
</div>

<style>
  .btn-gradient {
    background: linear-gradient(45deg, #6a11cb, #2575fc);
    border: none;
    transition: background 0.3s ease;
  }
  .btn-gradient:hover {
    background: linear-gradient(45deg, #2575fc, #6a11cb);
    color: white;
  }
  /* フォームアイコンの色調整 */
  .input-group-text i {
    color: #6a11cb;
  }
</style>

