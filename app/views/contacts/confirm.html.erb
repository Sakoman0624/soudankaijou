<div class="container mt-5">
  <h2 class="text-center mb-4">確認画面</h2>

  <%= form_with model: @contact, url: thanks_contacts_path, local: true do |f| %>
    <div class="form-group">
      <label>お名前</label>
      <p><%= @contact.name %></p>
      <%= hidden_field_tag "contact[name]", @contact.name %>
    </div>

    <div class="form-group">
      <label>メールアドレス</label>
      <p><%= @contact.email %></p>
      <%= hidden_field_tag "contact[email]", @contact.email %>
    </div>

    <div class="form-group">
      <label>お問い合わせ内容</label>
      <p><%= simple_format(@contact.message) %></p>
      <%= hidden_field_tag "contact[message]", @contact.message %>
    </div>

    <div class="text-center">
      <%= submit_tag "送信する", class: "btn btn-success btn-lg" %>
      <%= button_to "戻る", new_contacts_path, method: :get, class: "btn btn-outline-secondary btn-lg", form_class: "d-inline" %>
    </div>
  <% end %>
</div>
