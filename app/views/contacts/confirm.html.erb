<div class="container mt-5 mb-5">
  <div class="card shadow-lg p-5 rounded-lg mx-auto confirm-card animated-fade" style="max-width: 700px;">
    <div class="text-center mb-4">
      <div class="step-indicator mb-2">
        <span class="step active">1. 入力</span>
        <span class="step current">2. 確認</span>
        <span class="step">3. 完了</span>
      </div>
      <h2 class="font-weight-bold text-white"><i class="fas fa-search"></i> 内容をご確認ください</h2>
    </div>

    <%= form_with url: thanks_contacts_path, local: true do %>
      <%= hidden_field_tag "contact[name]", @contact.name %>
      <%= hidden_field_tag "contact[email]", @contact.email %>
      <%= hidden_field_tag "contact[message]", @contact.message %>
        
      <!-- 表示部分はそのままでOK -->
      <div class="form-group">
        <label class="font-weight-bold text-white">お名前</label>
        <div class="confirm-box slide-in"><%= @contact.name %></div>
      </div>
    
      <div class="form-group">
        <label class="font-weight-bold text-white">メールアドレス</label>
        <div class="confirm-box slide-in"><%= @contact.email %></div>
      </div>
    
      <div class="form-group">
        <label class="font-weight-bold text-white">お問い合わせ内容</label>
        <div class="confirm-box slide-in"><%= simple_format(h(@contact.message)) %></div>
      </div>
    
      <div class="text-center mt-5">
        <%= submit_tag "送信する", name: "submit_button", class: "btn btn-gradient btn-lg px-5 font-weight-bold text-white mr-2" %>
        <%= submit_tag "戻る", name: "back_button", class: "btn btn-outline-light btn-lg font-weight-bold" %>
      </div>
    <% end %>
  </div>
</div>