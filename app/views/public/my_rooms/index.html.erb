<div class="py-5 text-center text-dark" style="background: linear-gradient(135deg, #ffeb3b, #ff9800);">
  <h1 class="display-5 mb-2">
    <i class="fa-solid fa-house-user"></i> 自作部屋一覧
  </h1>
  <p class="lead">あなたが作成した部屋の一覧です</p>
</div>

<div class="container my-5">
  <% if @rooms.present? %>
    <div class="row g-4">
      <% @rooms.each do |room| %>
        <div class="col-md-6 col-lg-4">
          <div class="card shadow-lg border-0 h-100 d-flex flex-column">
            <!-- 画像がある場合はサムネイル表示 -->
            <%= link_to room_path(room), class: 'thumbnail-button m-1' do %>
              <%= image_tag(
                    (room.image.attached? ? room.get_image(300,230) : 'room_image.jpg'),
                    class: 'thumbnail-image',
                    style: "object-fit: #{room.image.attached? ? 'contain' : 'cover'};"
                  ) %>
            <% end %>
            <div class="card-body d-flex flex-column">
              <h5 class="card-title text-dark"><%= truncate(room.title, length: 25) %></h5>
              <p class="card-text text-muted"><%= truncate(room.body, length: 80) %></p>

              <div class="mt-auto d-flex justify-content-between align-items-center flex-wrap">
                <%= link_to "詳細を見る", room_path(room),
                    class: "btn btn-warning btn-sm rounded-pill text-dark font-weight-bold" %>

                <% if current_user == room.user %>
                  <div class="d-flex gap-2">
                    <%= link_to "編集", edit_room_path(room),
                        class: "btn btn-primary btn-sm rounded-pill text-white" %>
                    <%= link_to "削除", room_path(room),
                        method: :delete,
                        data: { confirm: "本当に削除しますか" },
                        class: "btn btn-danger btn-sm rounded-pill" %>
                  </div>
                <% end %>
              </div>
            </div>

            <div class="card-footer text-muted small mt-2">
              作成日: <%= l(room.created_at, format: :short) %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div class="d-flex justify-content-center mt-4">
      <%= paginate @rooms %>
    </div>
  <% else %>
    <p class="text-center text-muted mt-5">まだ作成した部屋はありません。</p>
  <% end %>
</div>

<div class="text-center mt-5">
  <%= link_to "→ いいねした部屋一覧はこちら", liked_rooms_path,
              class: "btn btn-outline-danger btn-lg rounded-pill shadow" %>
</div>
