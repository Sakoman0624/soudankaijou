<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6 my-5">
      <%# エラーメッセージ %>
      <%= render 'layouts/errors', obj: @user %>
      <div class="card shadow-lg">
        <div class="card-header bg-secondary text-white text-center">
          <h4 class="mb-0">プロフィール編集</h4>
        </div>
        <div class="card-body bg-light">
          <%= form_with model: @user, local: true do |f| %>
            <%= f.hidden_field :password, value: @user.password %>
            <%= f.hidden_field :password_confirmation, value: @user.password_confirmation %>
            <div class="form-group">
              <%= f.label :profile_image do %>
                <i class="fas fa-image mr-2"></i>画像
              <% end %>
              <%= f.file_field :profile_image, class: "form-control-file" %>
            </div>
            <div class="form-group">
              <%= f.label :name do %>
                <i class="fas fa-user mr-2"></i>名前
              <% end %>
              <%= f.text_field :name, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :email do %>
                <i class="fas fa-envelope mr-2"></i>メールアドレス
              <% end %>
              <%= f.text_field :email, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :introduction do %>
                <i class="fas fa-comment-alt mr-2"></i>自己紹介（255文字まで）
              <% end %>
              <%= f.text_area :introduction, class: "form-control", rows: 3, placeholder: "自己紹介記入欄\n(例文)新社会人です！よろしくお願いします" %>
            </div>
            <div class="form-group text-center mb-0">
              <%= f.submit "プロフィール更新", class: 'btn btn-primary btn-lg btn-block' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>