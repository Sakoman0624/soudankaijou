<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-8 col-md-10">
      <div class="card profile-card shadow-lg border-0 rounded-4 overflow-hidden">
        <!-- ヘッダー -->
        <div class="card-header text-light text-center py-5">
          <%= image_tag @user.get_profile_image(160, 160),
                        class: "profile-image rounded-circle shadow-lg mb-3",
                        alt: "プロフィール画像" %>
          <h2 class="profile-name fw-bold mb-0"><%= @user.name %></h2>
          <p class="text-white-50 mt-2 mb-0">さんのプロフィール</p>
        </div>
        <!-- 本文 -->
        <div class="card-body text-center p-5">
          <!-- 紹介文 -->
          <div class="mb-5">
            <h4 class="text-secondary mb-3">
              <i class="fa-solid fa-quote-left me-2 text-muted"></i>紹介文
            </h4>
            <div class="intro-section border rounded-3 p-4 text-break shadow-sm">
              <%= @user.introduction.presence || "紹介文がまだありません。" %>
            </div>
          </div>
          <% if user_signed_in? && current_user == @user && !current_user.guest? %>
            <!-- ボタンエリア -->
            <div class="row g-3">
              <div class="col-sm-6 fade-in">
                <%= link_to edit_user_path,
                    class: "action-btn btn btn-edit btn-lg w-100" do %>
                  <i class="fa-solid fa-user-pen me-2"></i>
                  プロフィールを編集
                <% end %>
              </div>
              <div class="col-sm-6 fade-in">
                <%= link_to my_rooms_path,
                    class: "action-btn btn btn-rooms btn-lg w-100" do %>
                  <i class="fa-solid fa-door-open me-2"></i>
                  自作の部屋 (<%= @my_rooms_count %>)
                <% end %>
              </div>
              <div class="col-sm-6 fade-in">
                <%= link_to liked_rooms_path,
                    class: "action-btn btn btn-liked btn-lg w-100" do %>
                  <i class="fa-solid fa-heart me-2"></i>
                  いいねした部屋 (<%= @liked_rooms_count %>)
                <% end %>
              </div>
              <div class="col-sm-6 fade-in">
                <%= link_to users_check_path,
                    class: "action-btn btn btn-danger-custom btn-lg w-100",
                    "data-confirm" => "退会画面に移動しますか？" do %>
                  <i class="fa-solid fa-right-from-bracket me-2"></i>
                  退会画面へ
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>