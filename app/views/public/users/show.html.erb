<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-10">
      <div class="card shadow-lg">
        <div class="card-header bg-dark text-light text-center">
          <h2><%= @user.name %><span class="ml-2">さんのプロフィール</span></h2>
        </div>
        <div class="card-body text-center">
          <%= image_tag @user.get_profile_image(150, 150), class: "rounded-circle shadow-sm mb-3", alt: "プロフィール画像" %>
          <h3 class="font-weight-bold"><%= @user.name %></h3>
          <div class="mt-4">
            <h4 class="text-secondary">紹介文</h4>
            <div class="border rounded p-3 text-break bg-light">
              <%= @user.introduction.presence || "紹介文がまだありません。" %>
            </div>
          </div>
          <% unless current_user&.guest? %>
            <% if user_signed_in? && current_user == @user %>
              <div class="mt-4">
                <%= link_to "プロフィールを編集", edit_user_path, class: "btn btn-outline-warning btn-lg mx-2 my-2" %>
                <%= link_to "自作の部屋", my_rooms_path, class: "btn btn-outline-success btn-lg mx-2 my-2" %>
                <%= link_to "いいねした部屋", liked_rooms_path, class: "btn btn-outline-primary btn-lg mx-2 my-2" %>
                <%= link_to "退会画面へ", users_check_path, class: "btn btn-outline-danger btn-lg mx-2 my-2" %>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>