<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-8 col-md-10">
      <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-dark text-light text-center py-4">
          <h2 class="mb-0"><%= @user.name %><span class="ml-2">さんのプロフィール</span></h2>
        </div>
        <div class="card-body text-center p-4">
          
          <!-- プロフィール画像と名前 -->
          <%= image_tag @user.get_profile_image(150, 150), class: "rounded-circle shadow-sm mb-3 border border-light", alt: "プロフィール画像" %>
          <h3 class="font-weight-bold mb-4"><%= @user.name %></h3>
          <hr class="my-4">

          <!-- 紹介文 -->
          <div class="mt-4">
            <h4 class="text-secondary mb-3">紹介文</h4>
            <div class="border rounded p-4 bg-light text-break">
              <%= @user.introduction.presence || "紹介文がまだありません。" %>
            </div>
          </div>

          <% unless current_user&.guest? %>
            <% if user_signed_in? && current_user == @user %>
              <!-- ボタンエリア -->
              <div class="mt-5">
                <div class="row">
                  <div class="col-sm-6 my-1">
                    <%= link_to "プロフィールを編集", edit_user_path, class: "btn btn-outline-warning btn-block btn-lg" %>
                  </div>
                  <div class="col-sm-6 my-1">
                    <%= link_to "自作の部屋 (#{@my_rooms_count})", my_rooms_path, class: "btn btn-outline-success btn-block btn-lg" %>
                  </div>
                  <div class="col-sm-6 my-1">
                    <%= link_to "いいねした部屋 (#{@liked_rooms_count})", liked_rooms_path, class: "btn btn-outline-primary btn-block btn-lg" %>
                  </div>
                  <div class="col-sm-6 my-1">
                    <%= link_to "退会画面へ", users_check_path, class: "btn btn-outline-danger btn-block btn-lg" %>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
