<div class="container">
  <div class="row justify-content-center">
    <div class="col-11 col-sm-10 col-lg-8 col-xl-6 my-5">
      <%# エラーメッセージ（カードの外で目立たせる） %>
      <%= render 'layouts/errors', obj: @room %>
      <div class="card shadow-lg">
        <div class="card-header bg-info text-white text-center">
          <h4 class="mb-0">投稿編集フォーム</h4>
        </div>
        <div class="card-body bg-light">
          <%= form_with model: @room, local: true do |f| %>
            <div class="form-group">
              <%= f.label :image do %>
                <i class="fas fa-image mr-2"></i>画像
              <% end %>
              <%= f.file_field :image, class: "form-control-file" %>
            </div>
            <div class="form-group">
              <%= f.label :title do %>
                <i class="fas fa-user-edit mr-2"></i>名前
              <% end %>
              <%= f.text_field :title, class: 'form-control', placeholder: "２～３０文字まで" %>
            </div>
            <div class="form-group">
              <%= f.label :body do %>
                <i class="fas fa-comment-dots mr-2"></i>紹介文（200文字まで）
              <% end %>
              <%= f.text_area :body, class: "form-control", rows: 3,
                    placeholder: "説明文\n(例文)明日の夕食が決められませんどうすればよいでしょうか" %>
            </div>
            <div class="form-group text-center mb-0">
              <%= f.submit "更新する", class: 'btn btn-warning btn-lg btn-block' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
