<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h3 class="text-dark bg-light py-4 mb-0 text-center">新規投稿</h3>
      <!-- form_with部分 -->
      <%= form_with model: Room.new do |f| %>
        <div class="form-group">
          <%= f.label :画像 %>
          <%= f.file_field :image, class: "form-control-file" %>
        </div>

        <div class="form-group mb-3">
            <%= f.label :タイトル, class: 'text-black' %>
            <%= f.text_area :title, class: 'form-control', placeholder:"２～３０文字"
             %>
        </div>

      	<div class="form-group">
            <%= f.label :本文, class: 'text-black' %>
            <%= f.text_area :body, class: 'form-control', placeholder:"５～２００文字"
             %>
        </div>

        <%= f.submit "投稿", class: 'btn-block' %>
      <% end %>
    </div>
  </div>
</div>