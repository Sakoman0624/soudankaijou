<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6 my-5">
      <%# エラーメッセージ（目立たせるため cardの外） %>
      <%= render 'layouts/errors', obj: @room %>
      <div class="card shadow-lg">
        <div class="card-header bg-primary text-white text-center">
          <h4 class="mb-0">新規作成フォーム</h4>
        </div>
        <div class="card-body bg-light">
          <%= form_with model: Room.new, local: true do |f| %>
            <div class="form-group">
              <%= f.label :image do %>
                <i class="fas fa-image mr-2"></i>画像
              <% end %>
              <%= f.file_field :image, class: "form-control-file" %>
            </div>
            <div class="form-group">
              <%= f.label :tag_id do %>
                <i class="fas fa-tag mr-2"></i>タグ
              <% end %>
              <%= f.select :tag_id, options_for_select(Tag.all.map { |tag| [tag.name, tag.id] }, selected: @room.tag_id), { prompt: "タグを選んでください" }, class: "form-select" %>
            </div>
            <div class="form-group">
              <%= f.label :title do %>
                <i class="fas fa-heading mr-2"></i>タイトル
              <% end %>
              <%= f.text_area :title, class: 'form-control', placeholder: "２～３０文字", rows: 2 %>
            </div>
            <div class="form-group">
              <%= f.label :body do %>
                <i class="fas fa-align-left mr-2"></i>本文
              <% end %>
              <%= f.text_area :body, class: 'form-control', placeholder: "５～２００文字", rows: 4 %>
            </div>
            <div class="form-group text-center mb-0">
              <%= f.submit "作成する", class: 'btn btn-success btn-lg btn-block' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>