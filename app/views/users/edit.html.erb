<div class="container">
  <div class="row ">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">

      <h3 class="text-dark bg-light py-4 mb-0 text-center">プロフィール編集</h3>
      <%= render 'layouts/errors', obj: @user %>
      <%= form_with model: @user do |f| %>
        <%= f.hidden_field :password, :value => @user.password %>
        <%= f.hidden_field :password_confirmation, :value => @user.password_confirmation %>

          <div class="form-group">
            <%= f.label :画像 %>
            <%= f.file_field :profile_image, class: "form-control-file" %>
          </div>
          <!-- 名前編集 -->
          <div class="form-group">
            <%= f.label :名前, class: 'text-black' %>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
          <!-- メールアドレス編集 -->
          <div class="form-group">
            <%= f.label :メールアドレス, class: 'text-black' %>
            <%= f.text_field :email, class: 'form-control' %>
          </div>
          <!-- 自己紹介 -->
          <div class="form-group row">
            <%= f.label :Introduction, '自己紹介(255文字まで) ', class:'col-md-3 col-form-label' %>
            <div class="col-md-9">
              <%= f.text_area :introduction, class: "form-control", rows: "3", placeholder:"自己紹介記入欄
      (例文)新社会人です！よろしくお願いします"
              %>
            </div>
          </div>
        <!-- プロフィール更新 -->
        <%= f.submit "更新", class: 'btn-block' %>
      <% end %>
    </div>
  </div>
</div>